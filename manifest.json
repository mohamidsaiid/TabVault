{
  "manifest_version": 3,
  "name": "TabVault",
  "description": "Automatically closes stale tabs and logs them into a Watch Later markdown file in your Obsidian vault.",
  "version": "0.1.0",
  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "TabVault"
  }
}
